PORT=3000
NODE_ENV=production

# Database
DB_PATH=./data/whatsapp.db

# Security - CHANGE THESE TO RANDOM STRINGS
JWT_SECRET=change-this-to-a-very-long-random-secret-minimum-32-characters
SESSION_SECRET=change-this-to-another-very-long-random-secret-minimum-32-characters

# CORS - Update with your Render URL after deployment
CORS_ORIGIN=https://your-app-name.onrender.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# File Upload Settings
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads
